<% include layout %>

    <div class="col-md-4 col-md-offset-4 text-center">
				<h2>JASYP C4P</h2>
				<div style="height:14px;" class="col-xs-12"></div>
				<form id="create" role="form" action="" method="post" class="form-horizontal">
					<div class="form-group"><label for="title" class="control-label col-sm-2">Título:</label>
						<div class="col-sm-10"><input id="title" name="title" type="text" maxlength="255" required="" class="form-control" /></div>
					</div>
					<div class="form-group"><label for="name" class="control-label col-sm-2">Ponente:</label>
						<div class="col-sm-10"><input id="name" name="name" type="text" maxlength="255" required="" class="form-control" /></div>
					</div>
					<div class="form-group"><label for="email" class="control-label col-sm-2">Email:</label>
						<div class="col-sm-10"><input id="email" name="email" type="text" maxlength="255" required="" class="form-control" /></div>
					</div>
					<div class="form-group"><label for="abstract" class="control-label col-sm-2">Resumen:</label>
						<div class="col-sm-10"><textarea id="abstract" name="texto" style="resize:none; overflow-y: scroll;" cols="50" rows="4" maxlength="2000" title="Máximo 2000 caracteres." required="" class="form-control"></textarea></div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-2 col-sm-10"><button id="register" type="submit" class="btn btn-default">Registrar</button></div>
					</div>
				</form>
			</div>
